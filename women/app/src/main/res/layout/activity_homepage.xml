<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"

    tools:context=".homepage">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/violet"


        android:orientation="horizontal"
        tools:ignore="MissingConstraints" >
        <ImageButton
            android:id="@+id/app"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/img_app2"
            android:background="@color/white"
            tools:layout_editor_absoluteX="22dp"
            tools:layout_editor_absoluteY="16dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rakshak"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"

            />
    </LinearLayout>




    <ImageButton
        android:id="@+id/sos"
        android:layout_width="184dp"

        android:layout_height="182dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.289"
        app:srcCompat="@drawable/img"
        tools:ignore="MissingConstraints" />

    <FrameLayout

        android:id="@+id/frameLayout3"
        android:layout_width="120dp"
        android:layout_height="120dp"


        android:layout_marginTop="68dp"
        android:background="#5064D6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.206"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sos">

        <ImageButton
            android:id="@+id/police"
            android:layout_width="88dp"
            android:layout_height="90dp"
            android:layout_gravity="center"

            android:layout_marginBottom="13dp"


            app:srcCompat="@mipmap/img_police" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"


            android:layout_marginTop="50dp"
            android:paddingBottom="10dp"
            android:text="NearBy Police\n       Station"
            android:textColor="@color/white"

            android:textStyle="bold"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="604dp" />


    </FrameLayout>

    <FrameLayout

        android:id="@+id/frameLayout"
        android:layout_width="120dp"
        android:layout_height="120dp"


        android:layout_marginTop="68dp"
        android:layout_marginEnd="16dp"
        android:background="#5064D6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/frameLayout3"
        app:layout_constraintTop_toBottomOf="@+id/sos">

        <ImageButton
            android:id="@+id/period"

            android:layout_width="88dp"
            android:layout_height="90dp"
            android:layout_gravity="center"

            android:layout_marginBottom="10dp"


            app:srcCompat="@mipmap/img_period" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="Period Tracker"
            android:textColor="@color/white"

            android:textStyle="bold"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="604dp" />


    </FrameLayout>

    <FrameLayout

        android:layout_width="120dp"
        android:layout_height="120dp"


        android:layout_marginStart="56dp"
        android:layout_marginTop="48dp"
        android:background="#5064D6"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toStartOf="@+id/frameLayout2"
        app:layout_constraintHorizontal_bias="0.085"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout3">

        <ImageButton
            android:id="@+id/helpline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="20dp"


            app:srcCompat="@mipmap/img_number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="Emergency\n  Number"
            android:textColor="@color/white"

            android:textStyle="bold"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="604dp" />


    </FrameLayout>

    <FrameLayout

        android:id="@+id/frameLayout2"
        android:layout_width="120dp"

        android:layout_height="120dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="56dp"
        android:background="#5064D6"
        android:paddingTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
        app:layout_constraintVertical_bias="0.0">

        <ImageButton
            android:id="@+id/tips"
            android:layout_width="88dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"


            app:srcCompat="@mipmap/img_tips" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="Escape Tips"
            android:textColor="@color/white"


            android:textStyle="bold"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="604dp" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>