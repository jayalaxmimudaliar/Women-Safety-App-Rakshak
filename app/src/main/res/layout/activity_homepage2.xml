<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_border"

    tools:context=".homepage">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/violet"


        android:orientation="horizontal"
        tools:ignore="MissingConstraints" >
        <ImageButton
            android:id="@+id/app"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/img_app2"
            android:background="@color/white"
            tools:layout_editor_absoluteX="22dp"
            tools:layout_editor_absoluteY="16dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rakshak"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"

            />

        <View
            android:layout_width="40dp"
            android:layout_height="40dp"



            android:layout_marginTop="20dp"
            android:layout_marginLeft="75dp"

            android:layout_marginBottom="20dp"
            android:background="@drawable/ic_baseline_more_vert_24"
            android:clickable="true"
            android:focusable="true"
            android:onClick="showPopup" />
    </LinearLayout>


    <ImageButton
        android:id="@+id/sos"
        android:layout_width="213dp"

        android:layout_height="193dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.253"
        app:shapeAppearanceOverlay="@style/circular"
        app:srcCompat="@drawable/sos111"
        tools:ignore="MissingConstraints" />

    <FrameLayout

        android:id="@+id/frameLayout"
        android:layout_width="120dp"
        android:layout_height="120dp"


        android:layout_marginTop="64dp"
        android:layout_marginEnd="52dp"
        android:background="#5064D6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/frameLayout4"
        app:layout_constraintTop_toBottomOf="@+id/sos">

        <ImageButton
            android:id="@+id/period"

            android:layout_width="88dp"
            android:layout_height="90dp"
            android:layout_gravity="center"

            android:layout_marginBottom="10dp"


            app:srcCompat="@mipmap/img_period" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="Period Tracker"
            android:textColor="@color/white"

            android:textStyle="bold"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="604dp" />


    </FrameLayout>

    <FrameLayout

        android:id="@+id/frameLayout4"
        android:layout_width="120dp"


        android:layout_height="120dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="64dp"
        android:background="#5064D6"
        android:paddingTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sos">

        <ImageButton
            android:id="@+id/helpline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="20dp"


            app:srcCompat="@mipmap/img_number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="Emergency\n  Number"
            android:textColor="@color/white"

            android:textStyle="bold"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="604dp" />


    </FrameLayout>


    <Button
        android:id="@+id/tip"
        android:layout_width="258dp"
        android:layout_height="88dp"
        android:background="@drawable/rounded_corners_2"
        android:text="Escape Tips"
        android:textFontWeight="@integer/google_play_services_version"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.878"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>